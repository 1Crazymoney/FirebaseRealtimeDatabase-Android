<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	android:id="@+id/activity_switch"
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:gravity="center_vertical"
	android:orientation="horizontal"
	android:paddingBottom="@dimen/activity_vertical_margin"
	android:paddingLeft="@dimen/activity_horizontal_margin"
	android:paddingRight="@dimen/activity_horizontal_margin"
	android:paddingTop="@dimen/activity_vertical_margin"
	tools:context="com.example.fdatabase.SwitchActivity">

	<Button
		android:id="@+id/btn_basic"
		style="?android:attr/button"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:layout_weight="1"
		android:onClick="gotoBasic"
		android:text="@string/btn_basic"
		android:textAllCaps="false"/>

	<Button
		android:id="@+id/btn_advance"
		style="?android:attr/button"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:layout_weight="1"
		android:onClick="gotoAdvance"
		android:text="@string/btn_advance"
		android:textAllCaps="false"/>

</LinearLayout>
